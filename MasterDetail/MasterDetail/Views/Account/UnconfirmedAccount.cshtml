
@{
    ViewBag.Title = "Unconfirmed Account";
}

<h2>@ViewBag.Title</h2>

<p>
    If you still have not received an email confirmation message within 10 minutes of registering, or if the message was accidentally deleted, then click this button and we'll send you another one.
</p>

@using (Html.BeginForm("RegenerateEmailConfirmation", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.Hidden("Email", (string) ViewBag.Email)
    <input type="submit" value="Re-Send Email Confirmation" class="btn btn-primary"/>
}







